<!-- These mapping rules can be used to map existing attributes to eduPerson ones -->
<AttributeMap xmlns="urn:guanxi:idp">
  <map name="urn:mace:dir:attribute-def:eduPersonTargetID"
       attrName="dn" attrValue=".*"
       mappedName="urn:mace:dir:attribute-def:eduPersonTargetedID"
       mappedRule="encrypt"
       persistent="true"/>
  
  <map name="eduPersonAffiliation-Staff"
       attrName="cn" attrValue=".*taff.*"
       mappedName="urn:mace:dir:attribute-def:eduPersonAffiliation"
       mappedValue="staff" />

  <map name="eduPersonAffiliation-Student"
       attrName="cn" attrValue=".*tudent.*"
       mappedName="urn:mace:dir:attribute-def:eduPersonAffiliation"
       mappedValue="staff" />

  <map name="eduPersonScopedAffiliation-Staff"
       attrName="cn" attrValue=".*taff.*"
       mappedName="urn:mace:dir:attribute-def:eduPersonScopedAffiliation"
       mappedValue="staff"
       mappedRule="append_domain" />

  <map name="eduPersonScopedAffiliation-Student"
       attrName="cn" attrValue=".*tudent.*"
       mappedName="urn:mace:dir:attribute-def:eduPersonScopedAffiliation"
       mappedValue="student"
       mappedRule="append_domain" />

  <map name="eduPersonEntitlement"
       attrName="cn" attrValue=".*"
       mappedName="urn:mace:dir:attribute-def:eduPersonEntitlement"
       mappedValue="" />

  <map name="eduPersonNickname"
       attrName="givenName" attrValue=".*"
       mappedName="urn:mace:dir:attribute-def:eduPersonNickname" />

  <!--
  <map name="eduPersonOrgDN"
       attrName="givenName" attrValue=".*"
       mappedName="urn:mace:dir:attribute-def:eduPersonNickname" />
  -->

  <!--
  <map name="eduPersonOrgUnitDN"
       attrName="givenName" attrValue=".*"
       mappedName="urn:mace:dir:attribute-def:eduPersonNickname" />
  -->

  <!--
  <map name="eduPersonPrimaryOrgUnitDN"
       attrName="givenName" attrValue=".*"
       mappedName="urn:mace:dir:attribute-def:eduPersonNickname" />
  -->

  <map name="eduPersonPrimaryAffiliation-Staff"
       attrName="cn" attrValue=".*taff.*"
       mappedName="urn:mace:dir:attribute-def:eduPersonPrimaryAffiliation"
       mappedValue="staff" />

  <map name="eduPersonPrimaryAffiliation-Student"
       attrName="cn" attrValue=".*tudent.*"
       mappedName="urn:mace:dir:attribute-def:eduPersonPrimaryAffiliation"
       mappedValue="staff" />

  <map name="eduPersonPrincipalName"
       attrName="cn" attrValue=".*"
       mappedName="urn:mace:dir:attribute-def:eduPersonPrincipalName"
       mappedRule="append_domain" />
</AttributeMap>
