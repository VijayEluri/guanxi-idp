<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                          http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <!-- The factory that creates GuanxiPrincipal objects for use with profiles -->
  <bean name="genericGanxiPrincipalFactory" class="org.guanxi.idp.service.generic.GenericGuanxiPrincipalFactory">
    <property name="cookieName"><value>GUANXI_IDP_PROFILE_SHIBBOLETH</value></property>
  </bean>

</beans>