<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="boostrap" class="org.guanxi.idp.Bootstrap" init-method="init">
    <property name="configFile"><value>/WEB-INF/guanxi_idp/config/idp.xml</value></property>
    <property name="gxJobs">
      <list>
        <ref bean="ukFederationMetadataParser" />
      </list>
    </property>
  </bean>

  <bean id="idpLogger" class="org.guanxi.common.log.Log4JLogger" />

</beans>