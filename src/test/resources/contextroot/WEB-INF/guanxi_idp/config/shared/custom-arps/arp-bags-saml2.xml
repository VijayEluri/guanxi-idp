<!-- arp-bags.xml
     This file defines bags of attributes that can be released. You can create bags to
     group attributes that are related and reuse them for different service providers.
     There are no service providers defined in this file. Service Provider information
     is held in the arp-providers.xml file. -->
<arp xmlns="urn:guanxi:idp">
  <bag name="eduPersonSAML2Profile-eduperson">
  	<attribute name="${saml2.eduPersonAffiliation}" value="*" />
    <attribute name="${saml2.eduPersonNickname}" value="*" />
    <attribute name="${saml2.eduPersonOrgDN}" value="*" />
    <attribute name="${saml2.eduPersonOrgUnitDN}" value="*" />
    <attribute name="${saml2.eduPersonPrimaryAffiliation}" value="*" />
    <attribute name="${saml2.eduPersonPrincipalName}" value="*" />
    <attribute name="${saml2.eduPersonEntitlement}" value="*" />
    <attribute name="${saml2.eduPersonOrgUnitDN}" value="*" />
    <attribute name="${saml2.eduPersonScopedAffiliation}" value="*" />
    <attribute name="${saml2.eduPersonTargetedID}" value="*" />
    <attribute name="${saml2.eduPersonAssurance}" value="*" />
  </bag>

  <bag name="eduPersonSAML2Profile-common">
  	<attribute name="${saml2.mail}" value="*" />
  </bag>
</arp>
